<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:id="@+id/demo_draw_camera_surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <com.project.nicki.displaystabilizer.contentprovider.DemoDraw
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <FrameLayout
                android:layout_width="208dp"
                android:layout_height="43dp"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="0.02">

                <TextView
                    android:id="@+id/log_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text="cX" />

                <TextView
                    android:id="@+id/log_cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="cY" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/seekBar_cY"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:indeterminate="false"
                android:max="20000" />

            <SeekBar
                android:id="@+id/seekBar_cX"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:indeterminate="false"
                android:max="20000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="218dp"
            android:layout_height="wrap_content"></FrameLayout>

        <TextView
            android:id="@+id/log_acce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text="New Text" />

        <TextView
            android:id="@+id/log_gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:text="New Text" />

    </LinearLayout>

</FrameLayout>
